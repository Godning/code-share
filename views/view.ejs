<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= group %></title>
    <style type="text/css">
        .container {
            width: 80%;
            margin: 0 auto;
        }
    </style>
    <link rel="stylesheet" href="/public/stylesheets/editor.css">
</head>
<body>

<div class="container">
    <h3><span>房间编号：</span><span><%= group %></span></h3>
    <div id="editor"><%= code %></div>
</div>

<script type="text/javascript" src="/public/javascripts/socket.io-1.4.5.js"></script>
<script type="text/javascript" src="/public/javascripts/ace.js"></script>
<script type="text/javascript">

    var editor = ace.edit("editor");
    editor.$blockScrolling = Infinity;

    var listenChange = true;

    var socket = io();

    socket.emit('join', '<%= group %>')

    function onChange() {
        if (listenChange) {
            var code = editor.getValue();
            socket.emit('code', code);
        }
    }
    editor.on('change', onChange);

    socket.on('code', function (code) {
        listenChange = false;
        var pos = editor.getCursorPosition();
        editor.setValue(code);
        editor.moveCursorToPosition(pos);
        editor.clearSelection();
        listenChange = true;
    });
</script>
</body>
</html>